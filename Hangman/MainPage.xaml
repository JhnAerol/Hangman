<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             x:Class="Hangman.MainPage">

    <Grid RowDefinitions="*" 
          Padding="0"
          RowSpacing="0">

        <!--Background Image-->
        <Image Grid.RowSpan="1"
               Source="bg.png"
               Aspect="AspectFill"
               Opacity="1.0"/>

        <!--ScrollView for entire content-->
        <ScrollView Grid.Row="0">
            <Grid RowDefinitions="Auto,*,Auto,Auto,Auto"
                  Padding="20,5"
                  RowSpacing="20">

                <!--Hangman Stage Display-->
                <Grid Grid.Row="0" 
                      ColumnDefinitions="*,*,*,*"
                      ColumnSpacing="5"
                      HeightRequest="100"
                      HorizontalOptions="Center">
                    <Image x:Name="Stage1"
                           Grid.Column="0" 
                           Source="{Binding Stage1Source}" 
                           WidthRequest="70" 
                           HeightRequest="90"/>
                    <Image x:Name="Stage2"
                           Grid.Column="1" 
                           Source="{Binding Stage2Source}" 
                           WidthRequest="70" 
                           HeightRequest="90"/>
                    <Image x:Name="Stage3"
                           Grid.Column="2" 
                           Source="{Binding Stage3Source}" 
                           WidthRequest="70" 
                           HeightRequest="90"/>
                    <Image x:Name="Stage4"
                           Grid.Column="3" 
                           Source="{Binding Stage4Source}" 
                           WidthRequest="70" 
                           HeightRequest="90"/>
                </Grid>

                <!--Hangman Drawing-->
                <Grid Grid.Row="1" 
                      VerticalOptions="Center"
                      HorizontalOptions="Center"
                      HeightRequest="200">
                    <Image x:Name="HangmanImage"
                           Source="{Binding HangmanImageSource}" 
                           IsAnimationPlaying="{Binding IsHangmanAnimationPlaying}"
                           WidthRequest="200" 
                           HeightRequest="200"
                           Aspect="AspectFit"/>
                </Grid>

                <!--Category-->
                <Frame Grid.Row="2" 
                       BackgroundColor="#2a2a2a"
                       BorderColor="#444"
                       CornerRadius="10"
                       Padding="15"
                       HasShadow="False">
                    <StackLayout>
                        <Label Text="Category" 
                               TextColor="#FFFFFF"
                               FontSize="14"
                               HorizontalOptions="Center"/>
                        <Label x:Name="CategoryLabel"
                               Text="{Binding CategoryText}" 
                               TextColor="White"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0"/>
                    </StackLayout>
                </Frame>

                <!--Guess Word Display-->
                <Frame Grid.Row="3" 
                       BackgroundColor="#2a2a2a"
                       BorderColor="#444"
                       CornerRadius="10"
                       Padding="15"
                       HasShadow="False">
                    <StackLayout>
                        <Label Text="Guess Word" 
                               TextColor="#FFFFFF"
                               FontSize="14"
                               HorizontalOptions="Center"/>
                        <Label x:Name="WordDisplay"
                               Text="{Binding WordDisplay}" 
                               TextColor="White"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0"
                               CharacterSpacing="8"/>
                    </StackLayout>
                </Frame>

                <!--Letters Grid-->
                <Frame Grid.Row="4" 
                       BackgroundColor="#2a2a2a"
                       BorderColor="#444"
                       CornerRadius="10"
                       Padding="15"
                       HasShadow="False">
                    <StackLayout>

                        <ScrollView HeightRequest="200"
                                    VerticalScrollBarVisibility="Always">
                            <FlexLayout x:Name="LettersContainer"
                                       Wrap="Wrap"
                                       JustifyContent="Center"
                                       AlignItems="Center"
                                       Direction="Row">
                                <!--Letter buttons will be added programmatically-->
                            </FlexLayout>
                        </ScrollView>
                    </StackLayout>
                </Frame>
            </Grid>
        </ScrollView>

        <!--Win Completion Overlay-->
        <Grid x:Name="winOverlay"
              IsVisible="{Binding IsWinOverlayVisible}"
              Grid.Row="0"
              BackgroundColor="#80000000">

            <Border BackgroundColor="White"
                    Padding="30"
                    StrokeThickness="6"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="350"
                    MaximumHeightRequest="400">
                <Border.Stroke>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2a2a2a" Offset="0.0" />
                        <GradientStop Color="#2E7D32" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Stroke>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,10"
                            Radius="20"
                            Opacity="0.5" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <Label Text="CONGRATULATIONS!"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#4CAF50"
                           HorizontalTextAlignment="Center" />

                    <Label x:Name="winMessage"
                           Text="{Binding WinMessage}"
                           FontSize="18"
                           TextColor="#333333"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10" />

                    <BoxView HeightRequest="2"
                             BackgroundColor="#E0E0E0"
                             Margin="0,5" />

                    <Button Text="PLAY AGAIN"
                            Clicked="OnPlayAgainClicked"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="#4CAF50"
                            BorderColor="#2E7D32"
                            BorderWidth="2"
                            CornerRadius="12"
                            HeightRequest="50" />

                    <Button Text="QUIT"
                            Clicked="OnQuitClicked"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="#666666"
                            BackgroundColor="Transparent"
                            BorderColor="#CCCCCC"
                            BorderWidth="2"
                            CornerRadius="12"
                            HeightRequest="50" />
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!--Lose Game Over Overlay-->
        <Grid x:Name="loseOverlay"
              IsVisible="{Binding IsLoseOverlayVisible}"
              Grid.Row="0"
              BackgroundColor="#80000000">

            <Border BackgroundColor="White"
                    Padding="30"
                    StrokeThickness="6"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="350"
                    MaximumHeightRequest="400">
                <Border.Stroke>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2a2a2a" Offset="0.0" />
                        <GradientStop Color="#B71C1C" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Stroke>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,10"
                            Radius="20"
                            Opacity="0.5" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <Label Text="GAME OVER"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="#D32F2F"
                           HorizontalTextAlignment="Center" />

                    <Label Text="You lost! The word was:"
                           FontSize="18"
                           TextColor="#333333"
                           HorizontalTextAlignment="Center" />

                    <Label x:Name="correctWordLabel"
                           Text="{Binding CorrectWordLabel}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#D32F2F"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10" />

                    <BoxView HeightRequest="2"
                             BackgroundColor="#E0E0E0"
                             Margin="0,5" />

                    <Button Text="PLAY AGAIN"
                            Clicked="OnPlayAgainClicked"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="#4CAF50"
                            BorderColor="#2E7D32"
                            BorderWidth="2"
                            CornerRadius="12"
                            HeightRequest="50" />

                    <Button Text="QUIT"
                            Clicked="OnQuitClicked"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="#666666"
                            BackgroundColor="Transparent"
                            BorderColor="#CCCCCC"
                            BorderWidth="2"
                            CornerRadius="12"
                            HeightRequest="50" />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>

</ContentPage>
